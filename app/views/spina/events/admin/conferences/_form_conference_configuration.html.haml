#conference_configuration.tab-content.well
  .horizontal-form

    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Conference.human_attribute_name(:draft)
        %small= Spina::Events::Conference.human_attribute_name :draft_description
      .horizontal-form-content
        = f.check_box :draft, data: {switch: true}

    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Conference.human_attribute_name(:slug)
        %small= Spina::Events::Conference.human_attribute_name :slug_description
      .horizontal-form-content
        = f.text_field :slug, placeholder: Spina::Events::Conference.human_attribute_name(:slug_placeholder)
        - if @conference.slug
          %small
            Current permalink:
            \ /conferences/#{@conference.slug}

    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Conference.human_attribute_name(:currency)
      .horizontal-form-content
        .select-dropdown
          = f.select :currency, options_for_select([['GBP - $', '£'], ['EUR - €', '€'], ['USD - $', '$']])
