.well
  .horizontal-form
    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Question.human_attribute_name(:title)
      .horizontal-form-content
        = f.text_field :title
    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Question.human_attribute_name(:body)
      .horizontal-form-content
        = render 'spina/admin/shared/rich_text_field', f: f, field: :body
    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Question.human_attribute_name(:position)
      .horizontal-form-content
        = f.number_field :position
    .horizontal-form-group
      .horizontal-form-label
        = t('spina.delete')
      .horizontal-form-content
        = f.check_box :_destroy, data: { switch: true }
