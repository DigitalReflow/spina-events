.well
  .horizontal-form
    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Ticket.human_attribute_name(:name)
      .horizontal-form-content
        = f.text_field :name
    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Ticket.human_attribute_name(:code)
      .horizontal-form-content
        = f.text_field :code
    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Ticket.human_attribute_name(:description)
      .horizontal-form-content
        = render 'spina/admin/shared/rich_text_field', f: f, field: :description
    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Ticket.human_attribute_name(:price)
      .horizontal-form-content
        = f.text_field :price
    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Ticket.human_attribute_name(:early_bird_price)
      .horizontal-form-content
        = f.text_field :early_bird_price
    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Ticket.human_attribute_name(:current_price)
      .horizontal-form-content
        = f.text_field :current_price
    .horizontal-form-group
      .horizontal-form-label
        = Spina::Events::Ticket.human_attribute_name(:position)
      .horizontal-form-content
        = f.number_field :position
    .horizontal-form-group
      .horizontal-form-label
        = t('spina.delete')
      .horizontal-form-content
        = f.check_box :_destroy, data: { switch: true }
